@using SystemCenter
@model List<USERS>
<script src="~/Scripts/Users/Users.js"></script>
<script type="text/javascript">$(document).ready(function ($) { InitPage(); });</script>     
<article class="content responsive-tables-page">
    <div class="title-block">
        <div class="form-inline">
            <div class="form-group">
                <h3 class="title">使用者帳號管理</h3>
                <p class="title-description">Sample form elements </p>
            </div>
            <div class="form-group">
                <button type="button" id="Query" class="btn btn-primary">查詢</button>
            </div>
        </div>
    </div>
    <div class="subtitle-block">
        <div>
            <div class="form-inline">
                <div class="form-group">
                    <label class="form-control-label" for="USR_ID">使用者帳號</label>
                    <input type="text" class="form-control query" id="USR_ID" placeholder="">
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="USR_NAME">使用者名稱</label>
                    <input type="text" class="form-control query" id="USR_NAME" placeholder="">
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="USR_STATUS">啟用</label>
                    <select class="form-control query" id="USR_STATUS">
                        <option value="1">啟用</option>
                        <option value="0">停用</option>
                    </select>
                </div>
            </div>

        </div>
    </div>
    <div class="table-responsive">
<table id="gridview" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                   <th>使用者帳號</th>
                    <th>使用者名稱</th>
                    <th>電子郵件</th>
                    <th>帳號狀態</th>
                    <th>備註</th>
                    <th>建檔日期</th>
                    <th>建檔人員</th>
                    <th>修改日期</th>
                    <th>修改人員</th>
                </tr>
            </thead>

            <tbody>
           
            </tbody>
        </table>
